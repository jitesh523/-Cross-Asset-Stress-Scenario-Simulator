# Production Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=simulator
POSTGRES_USER=simulator_user
POSTGRES_PASSWORD=change_this_password_in_production
DATABASE_URL=postgresql://simulator_user:change_this_password_in_production@postgres:5432/simulator

# API Keys
FRED_API_KEY=your_fred_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Data Ingestion Configuration
DATA_START_DATE=2019-01-01
DATA_END_DATE=2024-12-31
DATA_INTERVAL=1d

# Application Configuration
APP_NAME=Cross-Asset Stress Scenario Simulator
DEBUG=False
LOG_LEVEL=INFO

# Security (generate strong secrets for production)
SECRET_KEY=change_this_to_a_random_secret_key_in_production
